@using AcmeCorp.Web.Startup

@model Abp.Application.Services.Dto.PagedResultDto<AcmeCorp.HealthCare.Dto.PatientDto>
@{
    ViewBag.Title = L("Patients");
    ViewBag.CurrentPageName = PageNames.Patients;
}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Patients/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Patients/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Patients")</h1>
            </div>
            <div class="col-sm-6">
                <a href="javascript:;" data-toggle="modal" data-target="#PatientCreateModal" class="btn bg-blue float-sm-right">
                    <i class="fa fa-plus-square"></i>
                    @L("Patients")
                </a>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            <div class="col-md-6">
                                @await Html.PartialAsync("~/Views/Patients/Index.AdvancedSearch.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="PatientsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>@L("PatientId")</th>
                                        <th>@L("PatientName")</th>
                                        <th>@L("DateOfBirth")</th>
                                        <th>@L("Gender")</th>
                                        <th>@L("IsActive")</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("~/Views/Patients/_CreateModal.cshtml", @Model)

<div class="modal fade" id="PatientEditModal" tabindex="-1" role="dialog" aria-labelledby="PatientEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>
